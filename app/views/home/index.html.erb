<%= stylesheet_pack_tag 'home', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container-fluid main-theme-background">
  <div class="row">
    <h1>Welcome to cinematichub</h1>
  </div>
  <div class="row">
    <%= link_to 'Sign in', new_user_session_path %>
    <%= link_to 'Sign up', new_user_registration_path %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
    <%= link_to 'Edit profile', edit_user_registration_path %>
  </div>
  <div class="row">
    <%= link_to(films_path) do %>
      <h1 class="text-center"> Show all films</h1>
    <% end %>
  </div>
  <%= render 'category_widget',
      category_name: 'Action movies',
      films_list: @action_movies,
      background: 'action-movies' %>
  <%= render 'category_widget',
      category_name: 'Westerns',
      films_list: @westerns,
      background: 'westerns' %>
  <%= render 'category_widget',
      category_name: 'Gangsters',
      films_list: @gangsters,
      background: 'gangsters' %>
  <%= render 'category_widget',
      category_name: 'Detectives',
      films_list: @detectives,
      background: 'detectives' %>
</div>
