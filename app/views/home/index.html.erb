<div class="container-fluid main-theme-background">
  <div class="row">
    <h1 class="text-center">Welcome to cinematichub</h1>
  </div>
  <div class="row">
    <%= link_to(films_path, style: 'text-decoration: none') do %>
      <h1 class="text-center"> Show all films</h1>
    <% end %>
  </div>
  <%= render 'category_widget',
      category_name: 'Action movies',
      films_list: @action_movies,
      background: 'action-movies' %>
  <%= render 'category_widget',
      category_name: 'Westerns',
      films_list: @westerns,
      background: 'westerns' %>
  <%= render 'category_widget',
      category_name: 'Gangsters',
      films_list: @gangsters,
      background: 'gangsters' %>
  <%= render 'category_widget',
      category_name: 'Detectives',
      films_list: @detectives,
      background: 'detectives' %>
</div>
