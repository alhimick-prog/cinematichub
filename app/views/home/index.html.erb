<div class="container-fluid" style="background:#fadfad;">
  <div class="row">
    <h1>Welcome to cinematichub</h1>
  </div>
  <div class="row">
    <%= link_to 'Sign in', new_user_session_path %>
    <%= link_to 'Sign up', new_user_registration_path %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
    <%= link_to 'Edit profile', edit_user_registration_path %>
  </div>
  <div class="row">
    <%= link_to(films_path) do %>
      <h1 class="text-center"> Show all films</h1>
    <% end %>
  </div>
  <div class="row bg-action-movies">
    <div class="row">
      <h2 class="headers-text-properties">Action movies</h2>
    </div>
    <div class="row">
      <% @action_movies.each_with_index do |film| %>
          <div class="col">
            <%= link_to(film) do %>
              <img src=<%= asset_path("default_image#{rand(0..4)}.png") %> class="img-fluid height-20">
              <div class='col headers-text-properties'><%= film.title %></div>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
  <div class="row bg-westerns">
    <div class="row">
      <h2 class="headers-text-properties">Westerns</h2>
    </div>
    <div class="row">
      <% @westerns.each_with_index do |film| %>
        <div class="col">
          <%= link_to(film) do %>
            <img src=<%= asset_path("default_image#{rand(0..4)}.png") %> class="img-fluid height-20">
            <div class='col headers-text-properties'><%= film.title %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row bg-gangsters">
    <div class="row">
      <h2 class="headers-text-properties">Gangsters</h2>
    </div>
    <div class="row">
      <% @gangsters.each_with_index do |film| %>
        <div class="col">
          <%= link_to(film) do %>
            <img src=<%= asset_path("default_image#{rand(0..4)}.png") %> class="img-fluid height-20">
            <div class='col headers-text-properties'><%= film.title %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row bg-detectives">
    <div class="row">
      <h2 class="headers-text-properties">Detectives</h2>
    </div>
    <div class="row">
      <% @detectives.each_with_index do |film| %>
        <div class="col">
          <%= link_to(film) do %>
            <img src=<%= asset_path("default_image#{rand(0..4)}.png") %> class="img-fluid height-20">
            <div class='col headers-text-properties'><%= film.title %></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
