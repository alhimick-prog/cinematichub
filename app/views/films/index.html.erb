<h1 class="text-center">List of films</h1>
<div class="container">
  <table class="table" bgcolor="#fadfad" height="100%">
    <tbody>
      <% @films.each do |film| %>
        <tr>
          <td width="15%">
            <div class="container height-20">
              <%= link_to(film) do %>
                <img src=<%= "assets/default_image#{rand(0..4)}.png" %> class="img-fluid" height="80%" width="100%">
                <div class='col' height="20%"><%= film.title %></div>
              <% end %>
            </div>
          </td>
          <td width="10%"><%= film.release_date.year %></td>
          <td width="75%"><%= film.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
