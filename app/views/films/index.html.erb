<div class="container-fluid main-theme-background">
  <div class="row"><h1 class="text-center">List of films</h1></div>
  <table class="table" height="100%">
    <tbody>
      <% @films.each do |film| %>
        <tr>
          <td width="15%">
            <div class="row">
              <%= link_to(film) do %>
                <% if film.main_image.representable? %>
                  <%= image_tag(film.main_image.representation(resize_to_limit: [100, 100]), class: 'img-fluid height-20') %>
                <% else %>
                  <%= image_tag('default_image3.png', class: 'img-fluid height-20') %>
                <% end %>
                <div class='col' height="20%"><%= film.title %></div>
              <% end %>
            </div>
          </td>
          <td width="10%"><%= film.release_date.year %></td>
          <td width="75%"><%= film.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @films, outer_window: 3 %>
</div>
